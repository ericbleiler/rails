<% if !user_signed_in? %>
    <p><div class="auto"><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "button-large" %></div></p>
<% end %>
<br><br>
<div class="row">
  <% @restaurants.each do |restaurant| %>
  <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
               <%= link_to (image_tag restaurant.image.url(:medium)), restaurant%> 
        </div>
      </div>
  <% end %>
</div>
