<div class="review">

	<% if @reviews.blank? %>
          <h3>No reviews just yet, would you like to add the first!</h3>
          <%= link_to "Write Review", new_restaurant_review_path(@restaurant), class: "button" %>
        <% else %>
  			<article class="card">
                <div class="card-content">
                	<div class="star-rating" data-score= <%= review.rating %> ></div>
                	<div class="review-rating" data-score="<%= review.rating %>"></div>
					<div class="review-comment"><%= review.comment %></div>
               	<% if user_signed_in? %>
					<% if review.user_id == current_user.id %>
						<div class="links btn-group">
							<%= link_to "Edit", edit_restaurant_review_path(review.restaurant, review), class: "button" %>
							<%= link_to "Delete", restaurant_review_path(review.restaurant, review), method: :delete, data: { confirm: "Are you sure?" }, class: "button" %>
						</div>
					<% end %>	
				<% end %>
              </div>
          </article>
          <% end %>
</div>		